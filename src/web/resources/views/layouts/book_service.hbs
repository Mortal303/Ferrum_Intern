<div style="background-color: #6666ff;">
  <div class="unix-invoice">
    <div style="box-shadow: 10px 10px 10px 10px cornflowerblue;">
      <div class="container-fluid">
        <div class="row">
          <div class="col-lg-12">
            <div style="height: 1500px;" id="invoice" class="effect2 m-t-120">
              <div id="invoice-top">
                <div class="logo"> <img src="assets/images/logo.png" alt="Image" /></div>

                <!--End Info-->

                <!--End Title-->
              </div>
              <!--End InvoiceTop-->

              <div id="msg"></div>

              <div id="invoice-mid">
                <!--End Invoice Mid-->

                <div id="invoice-bot">

                  <div>
                    <div class="invoice-info" style="align-content: center ;">
                      <h3>Book A New Service </h3>


                      <form onsubmit="registerService(); return false;">
                        <!-- 2 column grid layout with text inputs for the first and last names -->
                        <div class="row mb-4">
                          <div class="col">
                            <div class="form-outline">
                               <select id="select_product" required>
                                <option value="" selected disabled>Select Product</option>
                              </select>
                              <label class="form-label" for="form6Example1">Product name</label>
                            </div>
                          </div>
                          <div class="col">
                            <div class="form-outline">
                              <input type="text" id="serviceType" class="form-control" required />
                              <label class="form-label" for="form6Example2">Service Type</label>
                            </div>
                          </div>
                        </div>

                        <!-- Text input -->
                        <div class="row mb-4">
                          <div class="col">
                            <div class="form-outline">
                              <input type="date" id="date" class="form-control" required />
                              <label class="form-label" for="form6Example1">Date</label>
                            </div>
                          </div>
                          <div class="col">
                            <div class="form-outline">
                              <input type="time" id="time" class="form-control" required />
                              <label class="form-label" for="form6Example1">Time</label>
                            </div>
                          </div>
                        </div>

                        <!-- Text input -->
                        <div class="form-outline mb-4">
                          <input type="text" id="address" class="form-control" required />
                          <label class="form-label" for="form6Example4">Address</label>
                        </div>

                        <!-- Email input -->
                        <div class="form-outline mb-4">
                          <input type="email" id="email" class="form-control" required />
                          <label class="form-label" for="form6Example5">Email</label>
                        </div>

                        <!-- Number input -->
                        <div class="form-outline mb-4">
                          <input type="phone" id="phone" class="form-control" required />
                          <label class="form-label" for="form6Example6">Phone</label>
                        </div>

                        <!-- Message input -->
                        <div class="form-outline mb-4">
                          <textarea class="form-control" id="info" rows="4"></textarea>
                          <label class="form-label" for="form6Example7">Additional information</label>
                        </div>
                        <!-- Submit button -->
                        <button type="submit" class="btn btn-primary btn-block mb-4">Book Service</button>
                      </form>

                    </div>
                  </div>

                  <div id="legalcopy">

                  </div>

                </div>
                <!--End InvoiceBot-->
              </div>
              <!--End Invoice-->
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>



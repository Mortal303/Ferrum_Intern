<link rel="stylesheet" href="static/css/payment.css">
<style>
  .razorpay-payment-button a svg {
    display: none;
  }

  .razorpay-payment-button a::before {
    content: none;
    background-color: white !important;
    z-index: -10;
    box-shadow: none !important;
  }

  .razorpay-payment-button a {
    height: 40px !important;
    width: 220px !important;
    display: flex !important;
    justify-content: center !important;
    align-items: center !important;
    font-style: normal !important;
    background: linear-gradient(131deg, rgba(183, 26, 255, 0.6702031154258579) 5%, rgba(0, 65, 255, 0.6702031154258579) 18%, rgba(0, 212, 255, 0.6674019949776786) 32%, rgba(10, 255, 0, 0.6730042358740371) 46%, rgba(228, 255, 0, 0.6702031154258579) 60%, rgba(255, 149, 0, 0.6589986336331408) 76%, rgba(255, 0, 0, 0.6702031154258579) 91%) !important;
  }

  .PaymentButton-contents {
    display: none;
  }
</style>

<section class="gradient-custom">
  <div class="container my-5 py-5">
    <div class="row d-flex justify-content-center py-5">
      <div class="col-md-7 col-lg-5 col-xl-4">
        <div class="card" style="border-radius: 15px;">
          <div class="card-body p-4">
            <form onsubmit="selectProduct(); return false;">
              <div>
                <select id="payment_product" required>
                  <option value="" selected disabled>Select Product</option>
                </select>
              </div>

              <label class="form-label" for="typeText">Name</label>
              <div class="d-flex justify-content-between align-items-center mb-3">
                <div class="form-outline widthPaymentCard">
                  <input type="text" id="typeText" class="form-control form-control-lg" placeholder="Name" required />
                </div>
              </div>

              <label class="form-label" for="typeName">Address</label>
              <div class="d-flex justify-content-between align-items-center mb-4">
                <div class="form-outline widthPaymentCard">
                  <input type="text" id="typeName" class="form-control form-control-lg" placeholder="Address"
                    required />
                </div>
              </div>

              <label class="form-label" for="typeExp">Date and Time</label>
              <div class="d-flex justify-content-between align-items-center pb-2">
                <div class="form-outline widthPaymentCard">
                  <input type="datetime-local" id="typeExp" class="form-control form-control-lg" id="exp" required />
                </div>
              </div>
              <button type="submit">Proceed</button>
            </form>
            <button id="rzp-button1" class="mt-5">Pay</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script src="static/js/lib/jquery.min.js"></script>
<script src="https://checkout.razorpay.com/v1/checkout.js"></script>
<script src="static/js/app/payment.js"></script>
<body class="bg-primary">

    <div class="unix-login">
        <div class="container-fluid">
            <div class="row justify-content-center">
                <div class="col-lg-6">
                    <div class="login-content">
                        <div class="login-form">
                            <center>
                                <div id="msg">
                            </center>
                            <h4>Forgot Password</h4>
                            <form onsubmit="forgotPassword(); return false;">
                                <div class="form-group">
                                    <label>Email address</label>
                                    <input type="email" class="form-control" id="email" placeholder="Email" required>
                                </div>
                                <button type="submit" class="btn btn-primary btn-flat m-b-15">Submit</button>
                            </form>
                            <div class="text-center">
                                <a class="medium" href="register"><strong>Create an Account!</strong></a>
                            </div>
                            <div class="text-center">
                                <a class="medium" href="login"><strong>Already have an account? Login!</strong></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="../static/js/app/auth/forgot-password.js"></script>

</body>